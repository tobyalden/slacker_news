<h2>Add a link</h2>

<%= form_for @link do |f|%>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :url%>
    <%= f.text_field :url, class: "form-control"%>
  </div>
  <%= f.submit class: "btn btn-success"%>
<% end %>
